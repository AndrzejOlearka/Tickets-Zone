<div class="panel w-50 mx-auto">

  <div class="text-center panel-heading bg-dark text-light mb-4" style="height: 50px;">
      <h3 class="panel-title pt-2">Log In</h3>
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group">
      <%= f.label :email, class: "font-weight-bold" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :password, class: "font-weight-bold" %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="form-group">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, class: "font-weight-bold" %>
      </div>
    <% end %>

    <div class="form-group text-center">
      <%= f.submit "Log in", class: "btn btn-primary mx-auto" %>
    </div>
  <% end %>
</div>